<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net47</TargetFrameworks>
    <AssemblyName>Malimbe.FieldToProperty.Fody</AssemblyName>
    <RootNamespace>Malimbe.FieldToProperty.Fody</RootNamespace>
    <LangVersion>latest</LangVersion>
    <AttributeProjectName>$([MSBuild]::ValueOrDefault('$(MSBuildProjectName)', '').Replace('.Fody', ''))</AttributeProjectName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FodyHelpers" Version="3.3.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\$(AttributeProjectName)\$(AttributeProjectName).csproj" />
  </ItemGroup>

</Project>
